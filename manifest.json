{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.11",
  "default_locale": "en",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg",
    "128": "icon.svg"
  },
  "background": {
    "service_worker": "background.js" 
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["configs.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "cookies"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "action": {
    "default_icon": {
      "48": "icon.svg",
      "96": "icon.svg",
      "128": "icon.svg"
    }
  }
}
